<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.database_gui.GUI_Classes.driverBusController">
   <children>
      <HBox prefHeight="0.0" prefWidth="603.0">
         <children>
            <ComboBox fx:id="driverBox" prefWidth="150.0" promptText="DriverIDs" />
            <ComboBox fx:id="busBox" prefWidth="150.0" promptText="BusIDs" />
         </children>
      </HBox>
      <TableView fx:id="driverBusAssignmentTable" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="603.0">
        <columns>
          <TableColumn fx:id="dIdCol" prefWidth="75.0" text="DriverID" />
          <TableColumn fx:id="bIdCol" prefWidth="75.0" text="BusID" />
            <TableColumn fx:id="shiftCol" prefWidth="75.0" text="Shift" />
        </columns>
      </TableView>
      <HBox spacing="520.0">
         <children>
            <Button mnemonicParsing="false" onAction="#goBack" text="Back" />
            <Button mnemonicParsing="false" onAction="#handleEditButton" text="Edit" />
         </children>
      </HBox>
   </children>
</VBox>
