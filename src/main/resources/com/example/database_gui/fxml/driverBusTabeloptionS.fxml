<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="179.0" prefWidth="700.0" spacing="10" style="-fx-padding: 12;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.database_gui.GUI_Classes.DriverBusEditorController">
   <children>
      <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Manage Driver-Bus Assignments" />
      
      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="120.0" />
            <ColumnConstraints prefWidth="240.0" />
            <ColumnConstraints halignment="RIGHT" prefWidth="120.0" />
            <ColumnConstraints prefWidth="240.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints prefHeight="32.0" />
            <RowConstraints prefHeight="32.0" />
         </rowConstraints>
         <children>
            <Label text="Driver:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="driverIdCombo" promptText="Select Driver" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Bus:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <ComboBox fx:id="busIdCombo" promptText="Select Bus" GridPane.columnIndex="3" GridPane.rowIndex="0" />

            <Label text="Shift:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="shiftInput" promptText="Morning/Afternoon/Evening" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="580.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleAdd" text="Add" />
            <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
         </children>
      </HBox>
      <Pane />
   </children>
</VBox>
