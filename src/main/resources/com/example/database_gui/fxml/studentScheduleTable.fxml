<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.database_gui.GUI_Classes.StudentScheduleController">
   <children>
      <ComboBox fx:id="studentIdBox" prefWidth="150.0" promptText="StudentID" />
      <TableView fx:id="ScheduleTable" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="75.0" text="StudentID" />
          <TableColumn fx:id="schedIdCol" prefWidth="75.0" text="ScheduleID" />
            <TableColumn fx:id="DoWCol" prefWidth="75.0" text="Day of Week" />
            <TableColumn fx:id="FCTCol" prefWidth="75.0" text="First Class Time" />
            <TableColumn fx:id="LCTCol" prefWidth="75.0" text="Last Class Time" />
        </columns>
      </TableView>
      <Button mnemonicParsing="false" onAction="#goBack" text="Back" />
   </children>
</VBox>
